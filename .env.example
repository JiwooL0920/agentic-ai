# Agentic AI Platform - Environment Variables
# Copy to .env and customize

# Application
DEBUG=false
ENVIRONMENT=development

# Blueprints
BLUEPRINTS_PATH=blueprints
DEFAULT_BLUEPRINT=devassist

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:32b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ScyllaDB (Alternator - DynamoDB-compatible API)
# Note: Currently using LocalStack DynamoDB due to authentication setup
# To use ScyllaDB Alternator: http://scylla-client.scylla.svc.cluster.local:8000
SCYLLADB_ENDPOINT=http://localstack.localstack.svc.cluster.local:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# PostgreSQL (pgvector - RAG only)
POSTGRES_HOST=postgres-rw.database.svc.cluster.local
POSTGRES_PORT=5432
POSTGRES_DB=agentic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Redis Sentinel
REDIS_HOST=redis-sentinel.redis-sentinel
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Management
SESSION_CACHE_TTL=3600
SESSION_TTL_DAYS=7
HISTORY_TTL_DAYS=30

# RAG (Retrieval-Augmented Generation)
RAG_ENABLED=true           # Enable/disable RAG globally
RAG_MIN_SCORE=0.5          # Minimum similarity score (0.0-1.0). Higher = more strict
RAG_DEFAULT_K=5            # Number of documents to retrieve per query
RAG_MAX_CONTEXT_TOKENS=4000  # Maximum tokens for RAG context
RAG_CHUNK_SIZE=1000        # Default chunk size for documents
RAG_CHUNK_OVERLAP=200      # Overlap between chunks

# Frontend
API_URL=http://localhost:8000
